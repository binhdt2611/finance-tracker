<div class="results-block">
  <%= render 'layouts/messages'  %>
</div>


<% if @friend %>
  <div class="card card-header results-block">
    <% @friend.each do |f| %>
    <strong>Email: </strong> <%= f.email %>
    <strong>Name: </strong> <%= f.first_name f.last_name %>
    <%= link_to 'Follow friend', '#', class: "btn btn-xs btn-success", method: :post %>
    <% end %>
  </div>
<% end %>